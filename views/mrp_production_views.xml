<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_addis_production_form" model="ir.ui.view">
        <field name="name">addis.production.form</field>
        <field name="model">addis.production</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_done" string="Mark as Done" type="object" invisible="state != 'confirmed'"/>
                    <button name="action_create_industrial_invoice" string="Create Invoice" type="object" invisible="state != 'done' or invoice_id != False" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="product_name"/>
                            <field name="responsible_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group string="Production Metrics">
                            <field name="date_planned"/>
                            <field name="raw_material_input"/>
                            <field name="finished_output"/>
                            <field name="waste_percentage" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <field name="invoice_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_addis_production_tree" model="ir.ui.view">
        <field name="name">addis.production.tree</field>
        <field name="model">addis.production</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="product_name"/>
                <field name="responsible_id"/>
                <field name="waste_percentage" avg="Average Waste"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="action_addis_production" model="ir.actions.act_window">
        <field name="name">Production Orders</field>
        <field name="res_model">addis.production</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_addis_production_root" name="Addis Industrial" sequence="10"/>
    <menuitem id="menu_addis_production_order" name="Orders" parent="menu_addis_production_root" action="action_addis_production"/>
</odoo>